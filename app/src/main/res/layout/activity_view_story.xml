<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.n0x3u5.SoRandom.ViewStory">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/bt_up"
            android:text="Upvote"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="#ff60d276"
            android:onClick="Upvote"/>

        <Button
            android:id="@+id/bt_dn"
            android:text="Downvote"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:onClick="Downvote"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/bt_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="#ffd25734" />

        <TextView
            android:id="@+id/tv_hero_post"
            android:layout_marginTop="10dp"
            android:layout_below="@id/bt_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_comments"
            android:layout_below="@id/tv_hero_post"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your comment..."/>

        <Button
            android:id="@+id/bt_submit"
            android:layout_below="@id/et_comments"
            android:layout_width="match_parent"
            android:text="Submit Comment"
            android:layout_height="48dp"
            android:onClick="PostAnswer"
            android:textColor="#FFFFFF"
            android:background="#1976D2" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bt_submit" />

    </RelativeLayout>

</ScrollView>
