<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/bt_View"
        android:text="View Stories"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/std_activity_horizontal_margin"
        android:layout_marginRight="@dimen/std_activity_horizontal_margin"
        android:textColor="#FFFFFF"
        android:background="#1976D2"
        android:onClick="viewStories"/>
    <Button
        android:layout_below="@id/bt_View"
        android:layout_marginTop="10dp"
        android:text="Post a Story"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="@dimen/std_activity_horizontal_margin"
        android:layout_marginRight="@dimen/std_activity_horizontal_margin"
        android:textColor="#FFFFFF"
        android:background="#1976D2"
        android:onClick="postStories"/>

</RelativeLayout>